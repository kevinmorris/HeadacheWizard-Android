<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="SplashTheme" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="CalendarDayView">
        <item name="android:background">@drawable/calendar_day_view_background</item>
        <item name="android:layout_margin">2dp</item>
    </style>
    
    <style name="ThreewaySwitch" parent="android:Widget.ProgressBar.Horizontal">
       <item name="android:progressDrawable">@android:drawable/progress_horizontal</item>
       <item name="android:thumb">@drawable/factor_switch_control_thumb</item>
       <item name="android:minWidth">100dp</item>
       <item name="android:minHeight">10dp</item>
       <item name="android:maxHeight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
       <item name="android:max">2</item>
    </style>

    <style name="ScreenTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/neutral_gray_light</item>
    </style>

    <style name="NavTitle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/neutral_gray_light</item>
    </style>

    <style name="SmallNavTitle" parent="NavTitle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FactorSwitchLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/neutral_gray_light</item>
    </style>

    <style name="Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/default_button_foreground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/default_button_background</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="DoneButton" parent="Button">
        <item name="android:layout_height">70dp</item>
        <item name="android:text">Done</item>
    </style>

    <style name="MonthNavigationButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/default_button_foreground</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/month_navigation_button_background</item>
    </style>

</resources>