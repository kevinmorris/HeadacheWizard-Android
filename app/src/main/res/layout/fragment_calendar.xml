    <RelativeLayout android:id="@+id/fragment_calendar_header"
            android:layout_width="match_parent"
            android:layout_height="60dp">
        <Button android:id="@+id/fragment_calendar_previous_month_button"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Previous"/>

        <Button android:id="@+id/fragment_calendar_next_month_button"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="Next"/>

        <View android:id="@+id/fragment_calendar_date_separator"
              android:layout_width="1dp"
              android:layout_height="match_parent"
              android:layout_centerHorizontal="true"
              android:layout_alignParentTop="true"
              android:visibility="invisible" />

        <TextView android:id="@+id/fragment_calendar_month_textview"
                  android:layout_width="200dp"
                  android:layout_height="match_parent"
                  android:layout_toLeftOf="@id/fragment_calendar_date_separator"
                  android:layout_toRightOf="@id/fragment_calendar_previous_month_button"
                  android:gravity="center_vertical|right"
                  android:paddingRight="3dp"
                  android:layout_alignParentTop="true"
                  />

        <TextView android:id="@+id/fragment_calendar_year_textview"
                  android:layout_width="100dp"
                  android:layout_height="match_parent"
                  android:layout_toRightOf="@id/fragment_calendar_date_separator"
                  android:layout_toLeftOf="@id/fragment_calendar_next_month_button"
                  android:gravity="center_vertical|left"
                  android:paddingLeft="3dp"
                  android:layout_alignParentTop="true"
                  />

    </RelativeLayout>

