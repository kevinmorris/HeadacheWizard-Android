<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="horizontal">
     
    <TextView android:id="@+id/factor_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/correlation_view" />
    
    <com.mountainowl.headachewizard.ui.components.CorrelationView android:id="@id/correlation_view"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/factor_switch_panel" />
    
    <com.mountainowl.headachewizard.ui.components.FactorSwitchPanel android:id="@id/factor_switch_panel"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        />
     
 </RelativeLayout>