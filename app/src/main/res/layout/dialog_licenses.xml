<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView android:id="@+id/dialog_licenses_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/dialog_about_link_text"
              android:layout_marginTop="18dp"
              android:layout_marginLeft="18dp"
              android:layout_marginRight="18dp"
              android:layout_marginBottom="0dp"
              android:textSize="18sp"
              android:text="@string/dialog_licenses_text"/>

    <TextView android:id="@+id/dialog_apache_license_link_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/dialog_licenses_text"
              android:layout_marginLeft="18dp"
              android:layout_marginRight="18dp"
              android:layout_marginBottom="18dp"
              android:layout_marginTop="0dp"
              android:textSize="15sp"
              android:autoLink="web"
              android:text="http://www.apache.org/licenses/LICENSE-2.0"/>

</RelativeLayout>