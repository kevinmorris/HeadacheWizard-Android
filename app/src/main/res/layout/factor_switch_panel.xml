<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:tools="http://schemas.android.com/tools"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:paddingTop="10dp"
     android:paddingBottom="10dp"
     android:orientation="horizontal">
     
    <com.mountainowl.headachewizard.ui.components.ThreewaySwitch android:id="@+id/factor_switch_control"
        style="@style/ThreewaySwitch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        app:leftBackground="@drawable/factor_switch_neg"
        app:centerBackground="@drawable/factor_switch_0"
        app:rightBackground="@drawable/factor_switch_pos" />
    
    <TextView android:id="@+id/factor_switch_label"
        style="@style/FactorSwitchLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_gravity="center"/>

</LinearLayout>